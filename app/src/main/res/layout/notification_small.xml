<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/match_date"
            android:text="2-18-16:00"
            android:layout_alignStart="@id/team1"
            android:layout_alignEnd="@id/team2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            />


        <ImageView
            android:id="@+id/team1"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/team1_name"
            android:text="그리핀"
            android:layout_below="@id/team1"
            android:layout_alignEnd="@id/vs"
            android:gravity="center_horizontal"
            android:layout_marginRight="25dp"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vs"
            android:text="vs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/team2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@id/vs"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/team2_name"
            android:text="skt1"
            android:layout_below="@id/team2"
            android:layout_marginLeft="25dp"
            android:layout_alignStart="@id/vs"
            android:gravity="center_horizontal"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/league_name"
            android:text="2-18-16:00"
            android:layout_toRightOf="@id/match_date"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/iv_twitch"
            android:layout_toRightOf="@id/team2"
            android:layout_marginVertical="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/notification"
            android:layout_margin="2dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/notification"
            android:layout_alignParentEnd="true"
            />

</RelativeLayout>