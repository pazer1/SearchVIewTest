<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_margin="2dp"
    android:elevation="50dp"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_height="140dp">
<RelativeLayout
    android:id="@+id/card_container"
    android:transitionName="profile"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/match_date"
        android:text="2-18-16:00"
        android:layout_alignStart="@id/team1"
        android:layout_alignEnd="@id/team2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/team1_name"
        android:text="그리핀"
        android:layout_below="@id/team1"
        android:layout_alignEnd="@id/vs"
        android:gravity="center_horizontal"
        android:layout_marginRight="25dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vs"
        android:text="vs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/team2"
        app:civ_border_width="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/vs"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/team2_name"
        android:text="skt1"
        android:layout_below="@id/team2"
        android:layout_marginLeft="25dp"
        android:layout_alignStart="@id/vs"
        android:gravity="center_horizontal"
        android:layout_width="100sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/league_name"
        android:text="2-18-16:00"
        android:layout_toRightOf="@id/match_date"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_twitch"
        android:layout_toRightOf="@id/team2"
        android:layout_marginVertical="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:id="@+id/notification"
        android:layout_margin="2dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/notification"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
</android.support.design.card.MaterialCardView>