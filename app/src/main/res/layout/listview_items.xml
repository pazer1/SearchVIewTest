<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:text="2-18-16:00"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/team1"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="그리핀"
        android:layout_below="@id/team1"
        android:layout_alignEnd="@id/team1"
        android:layout_alignStart="@id/team1"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_vs"
        android:text="vs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/team2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/tv_vs"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="skt1"
        android:layout_below="@id/team2"
        android:layout_alignEnd="@id/team2"
        android:layout_alignStart="@id/team2"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


