<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_margin="2dp"
    android:elevation="50dp"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_height="150dp">
<RelativeLayout
    android:id="@+id/card_container"
    android:transitionName="profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="2-18-16:00"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/team1"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="그리핀"
        android:layout_below="@id/team1"
        android:layout_alignEnd="@id/team1"
        android:layout_alignStart="@id/team1"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemTextView"
        android:text="vs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/team2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/itemTextView"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="skt1"
        android:layout_below="@id/team2"
        android:layout_alignEnd="@id/team2"
        android:layout_alignStart="@id/team2"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_twitch"
        android:background="@color/colorPrimaryDark"
        android:layout_toRightOf="@id/team2"
        android:layout_marginVertical="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</RelativeLayout>
</android.support.design.card.MaterialCardView>